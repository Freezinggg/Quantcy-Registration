@* @model Quantcy_Registration.Models.User.UserModel *@
@model IEnumerable<Quantcy_Registration.Models.User.UserModel>  


<h4>Users</h4>
<hr />
<table cellpadding="0" cellspacing="0">
    <tr>
        <th>Full Name</th>
        <th>Username</th>
        <th>Password</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.fullName)</td>
            <td>@Html.DisplayFor(m => item.username)</td>
            <td>@Html.DisplayFor(m => item.password)</td>
        </tr>
    }
</table>

<input type="button" value="Logout" onclick="location.href='@Url.Action("Logout", "Account")'" />

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
</style>

